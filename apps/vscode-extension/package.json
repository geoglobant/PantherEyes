{
  "name": "panthereyes-vscode-extension",
  "displayName": "PantherEyes",
  "description": "VS Code extension scaffold for PantherEyes security feedback.",
  "version": "0.1.0",
  "publisher": "panthereyes",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoglobant/PantherEyes.git",
    "directory": "apps/vscode-extension"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": ["Linters", "Other"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:panthereyes.askAgent",
    "onCommand:panthereyes.validateSecurityConfig",
    "onCommand:panthereyes.runScan",
    "onCommand:panthereyes.previewPolicyDiff",
    "onCommand:panthereyes.setLlmProvider",
    "onCommand:panthereyes.agentStatus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "PantherEyes",
      "properties": {
        "panthereyes.agentServerUrl": {
          "type": "string",
          "default": "http://localhost:4711/chat",
          "description": "PantherEyes agent-server /chat endpoint."
        },
        "panthereyes.autoStartLocalAgent": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start/connect to a local PantherEyes agent when the endpoint is localhost."
        },
        "panthereyes.defaultEnv": {
          "type": "string",
          "default": "dev",
          "description": "Default environment sent to the agent chat panel."
        },
        "panthereyes.defaultTarget": {
          "type": "string",
          "enum": ["web", "mobile"],
          "default": "web",
          "description": "Default target used by PantherEyes commands."
        }
      }
    },
    "commands": [
      {
        "command": "panthereyes.askAgent",
        "title": "PantherEyes: Ask Agent"
      },
      {
        "command": "panthereyes.validateSecurityConfig",
        "title": "PantherEyes: Validate Security Config"
      },
      {
        "command": "panthereyes.runScan",
        "title": "PantherEyes: Run Scan"
      },
      {
        "command": "panthereyes.previewPolicyDiff",
        "title": "PantherEyes: Preview Policy Diff"
      },
      {
        "command": "panthereyes.setLlmProvider",
        "title": "PantherEyes: Set LLM Provider"
      },
      {
        "command": "panthereyes.agentStatus",
        "title": "PantherEyes: Agent Status"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "vscode:prepublish": "corepack pnpm run build",
    "package:vsix": "corepack pnpm run build && npx @vscode/vsce package --out panthereyes-vscode-extension.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.6.2"
  }
}
